# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=sqlite:./prod.db
REDIS_URL=memory://localhost
USE_MONGODB=false

# Authentication
JWT_SECRET=production-jwt-secret-key-change-this-in-real-deployment
JWT_EXPIRE=24h
REFRESH_TOKEN_SECRET=production-refresh-token-secret-change-this-too
REFRESH_TOKEN_EXPIRE=7d

# CORS - will be updated with actual frontend URL
FRONTEND_URL=https://omegoo-chat.vercel.app
ALLOWED_ORIGINS=https://omegoo-chat.vercel.app

# Development defaults disabled for production
DISABLE_AUTH=false
DISABLE_RATE_LIMIT=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
LOG_LEVEL=info