# Backend Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://omegoo:secure_password_change_in_production@localhost:5432/omegoo
REDIS_URL=redis://localhost:6379

# MongoDB Configuration (Optional - for user management)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
USE_MONGODB=false

# Admin Configuration
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-in-production
ADMIN_JWT_EXPIRE=12h

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_EXPIRE=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRE=7d

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://omegoo.app

# OTP Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
OTP_EXPIRE_MINUTES=5

# AI Moderation APIs
SIGHTENGINE_API_USER=your-sightengine-user
SIGHTENGINE_API_SECRET=your-sightengine-secret
ASSEMBLYAI_API_KEY=your-assemblyai-api-key
OPENAI_API_KEY=your-openai-api-key

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=omegoo-evidence-storage

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@omegoo.app
SMTP_PASS=your-email-password

# Resend API for Email Verification
RESEND_API_KEY=your-resend-api-key-from-resend-com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
EVIDENCE_ENCRYPTION_KEY=your-32-character-encryption-key-change

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Legal Compliance
GRIEVANCE_OFFICER_EMAIL=grievance@omegoo.app
REPORT_WEBHOOK_URL=https://api.omegoo.app/webhooks/reports
POCSO_HOTLINE=1098