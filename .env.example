# Environment Configuration

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/omegoo
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Moderation Services
SIGHTENGINE_USER=your-sightengine-user
SIGHTENGINE_SECRET=your-sightengine-secret
ASSEMBLYAI_API_KEY=your-assemblyai-key

# Age Verification
FACETEC_DEVICE_KEY_IDENTIFIER=your-facetec-key
YOTI_CLIENT_SDK_ID=your-yoti-client-id
YOTI_KEY_PAIR_ID=your-yoti-keypair-id

# WebRTC
XIRSYS_IDENT=your-xirsys-ident
XIRSYS_SECRET=your-xirsys-secret
XIRSYS_DOMAIN=your-xirsys-domain

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=omegoo-evidence
AWS_REGION=us-east-1

# Google Services
GOOGLE_VISION_API_KEY=your-google-vision-key
ADMOB_APP_ID=your-admob-app-id
ADMOB_REWARDED_UNIT_ID=your-admob-rewarded-unit

# Monitoring
SENTRY_DSN=your-sentry-dsn
AMPLITUDE_API_KEY=your-amplitude-key

# App Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Panel
ADMIN_JWT_SECRET=your-admin-jwt-secret
ADMIN_JWT_EXPIRE=12h
OWNER_ADMIN_EMAIL=owner@example.com
OWNER_ADMIN_USERNAME=owner
OWNER_ADMIN_PASSWORD=change-me
# OWNER_ADMIN_PASSWORD_HASH=replace-with-bcrypt-hash

# Features
ENABLE_AUDIO_CHAT=true
ENABLE_VIDEO_CHAT=true
ENABLE_MODERATION=true
ENABLE_PAYMENTS=true

# Legal
GRIEVANCE_EMAIL=grievance@omegoo.app
SUPPORT_EMAIL=support@omegoo.app
COMPANY_NAME=Omegoo Technologies Pvt Ltd